{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "NoTerm",
  "version": "0.0.1",
  "identifier": "com.lin.NoTerm",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "NoTerm",
        "width": 1400,
        "height": 850,
        "minWidth": 1200,
        "minHeight": 600,
        "decorations": false,
        "titleBarStyle": "Overlay",
        "backgroundColor": "#00000000",
        "transparent": true,
        "devtools": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/NoTermTm/NoTerm/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEUxQjhBNzRFOTg4NTBBRjEKUldUeENvV1lUcWU0NFVJUExQK3VqV3MzTHI5ZU9Celp0V05yVzBJb1M4Yi85VktUbFU5cDk4ZUgK",
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
